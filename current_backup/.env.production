# 服务器配置
PORT=3000
NODE_ENV=production

# 数据库配置 - GitHub部署时使用环境变量
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=${DB_NAME}
DB_SSL=true

# JWT密钥 - 使用GitHub Secrets存储
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d

# 以太坊配置 - 使用GitHub Secrets存储
ETH_NETWORK=goerli
ETH_PROVIDER_URL=${ETH_PROVIDER_URL}
CONTRACT_ADDRESS=${CONTRACT_ADDRESS}
ADMIN_WALLET_PRIVATE_KEY=${ADMIN_WALLET_PRIVATE_KEY}

# USDT合约地址 (Goerli测试网) - 使用GitHub Secrets存储
USDT_CONTRACT_ADDRESS=${USDT_CONTRACT_ADDRESS}