/**
 * 取消PayPal支付
 */
async function cancelPayPalPayment() {
    const paymentIntentId = document.getElementById('payment-intent-id').value;
    
    try {
        // 显示处理中UI
        showPayPalProcessingUI('正在取消支付...');
        
        // 获取订单ID
        const storedOrderId = localStorage.getItem(`paypal_order_${paymentIntentId}`);
        
        if (storedOrderId) {
            console.log('取消已创建的PayPal订单:', storedOrderId);
            
            // 调用后端取消订单API
            const response = await fetch(`/api/payment/paypal/cancel-order`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    paymentIntentId: paymentIntentId,
                    orderId: storedOrderId
                })
            });
            
            if (!response.ok) {
                throw new Error(`取消订单请求失败: ${response.status}`);
            }
            
            const result = await response.json();
            
            // 重置订单创建状态
            paypalOrderCreated = false;
            
            // 移除本地存储的订单ID
            localStorage.removeItem(`paypal_order_${paymentIntentId}`);
            
            console.log('PayPal订单取消结果:', result);
            showInfo('支付已取消');
            
            // 刷新支付详情
            setTimeout(() => {
                loadPaymentDetails(paymentIntentId);
            }, 1000);
        } else {
            console.log('没有找到已创建的PayPal订单，直接重置UI');
            showInfo('支付已取消');
        }
    } catch (error) {
        console.error('取消PayPal支付错误:', error);
        showError('取消支付失败: ' + error.message);
    } finally {
        // 重置订单创建状态
        paypalOrderCreated = false;
        
        // 重置UI
        hidePayPalProcessingUI();
        
        // 重新初始化PayPal按钮
        if (document.getElementById('paypal-button-container')) {
            initPayPalButton();
        }
    }
}

