/**
 * 开始自动检查PayPal支付状态
 */
function startPayPalStatusCheck(paymentIntentId) {
    console.log(`开始检查支付状态: ${paymentIntentId}`);
    
    // 检查是否已取消
    if (paypalOrderCreated === false) {
        console.log('订单已被取消或未创建，不启动状态检查');
        return;
    }
    
    // 每5秒检查一次
    const statusInterval = setInterval(async () => {
        try {
            // 如果订单标记已取消，立即停止检查
            if (paypalOrderCreated === false) {
                console.log('检测到订单已标记为取消，停止状态检查');
                clearInterval(statusInterval);
                return;
            }
            
            const response = await fetch(`/api/payment/paypal/status/${paymentIntentId}`);
            if (!response.ok) {
                console.warn('获取PayPal状态失败，继续尝试...');
                return;
            }
            
            const statusData = await response.json();
            if (!statusData.success) {
                console.warn(`获取PayPal状态返回失败: ${statusData.message}`);
                return;
            }
            
            const paymentStatus = statusData.data.paymentStatus;
            const paypalOrderStatus = statusData.data.paypalOrderStatus;
            const captureId = statusData.data.captureId;
            
            console.log(`PayPal支付状态检查结果: 状态=${paymentStatus}, 订单状态=${paypalOrderStatus}, 捕获ID=${captureId || '无'}`);
            
            // 检查是否已取消支付
            if (paymentStatus === 'canceled' || paymentStatus === 'cancelled') {
                console.log('支付已被取消 - 状态检查确认');
                clearInterval(statusInterval);
                
                // 重置订单创建状态
                paypalOrderCreated = false;
                
                // 清除本地存储的订单ID
                localStorage.removeItem(`paypal_order_${paymentIntentId}`);
                
                // 刷新支付详情
                await loadPaymentDetails(paymentIntentId);
                
                // 显示取消消息
                showError('PayPal支付已取消');
                
                // 重新初始化支付按钮
                hidePayPalProcessingUI();
                return;
            }
            
            // 检查订单状态是否表明已取消或失败
            if (paypalOrderStatus === 'VOIDED' || paypalOrderStatus === 'DECLINED') {
                console.log('PayPal订单已被取消或拒绝 - 订单状态确认');
                clearInterval(statusInterval);
                
                // 重置订单创建状态
                paypalOrderCreated = false;
                
                // 清除本地存储的订单ID
                localStorage.removeItem(`paypal_order_${paymentIntentId}`);
                
                // 刷新支付详情
                await loadPaymentDetails(paymentIntentId);
                
                // 显示取消消息
                showError('PayPal支付已取消或被拒绝');
                
                // 重新初始化支付按钮
                hidePayPalProcessingUI();
                return;
            }
            
            // 只有在支付状态为paid或confirmed且有有效的捕获ID时才认为支付成功
            if ((paymentStatus === 'paid' || paymentStatus === 'confirmed') && captureId) {
                console.log('PayPal支付成功 - 有效的捕获ID已确认');
                clearInterval(statusInterval);
                
                // 重置订单创建状态
                paypalOrderCreated = false;
                
                // 清除本地存储的订单ID
                localStorage.removeItem(`paypal_order_${paymentIntentId}`);
                
                // 刷新支付详情
                await loadPaymentDetails(paymentIntentId);
                
                // 显示成功信息
                showSuccess('paypal', {
                    id: paymentIntentId,
                    amount: paymentData.amount,
                    method: 'PayPal',
                    captureId: captureId
                });
            }
        } catch (error) {
            console.error('检查PayPal状态错误:', error);
        }
    }, 5000);
    
    // 60秒后停止检查
    setTimeout(() => {
        clearInterval(statusInterval);
        console.log('支付状态检查超时，终止检查');
        
        // 检查是否仍在处理中
        const paypalProcessingUI = document.getElementById('paypal-processing-ui');
        if (paypalProcessingUI && paypalProcessingUI.style.display !== 'none') {
            console.log('状态检查超时但UI仍处于处理中状态，重置UI');
            hidePayPalProcessingUI();
            showError('支付状态检查超时，请刷新页面检查支付状态');
        }
    }, 60000);
}

// 创建PayPal订单
async function createPayPalOrder() {
    const paymentIntentId = document.getElementById('payment-intent-id').value;
    console.log('创建PayPal订单，支付意图ID:', paymentIntentId);
    
    try {
        // 先获取商家信息，确认是否有有效的PayPal邮箱
        const merchantResponse = await fetch(`${API_BASE_URL}/payment/paypal/merchant-info/${paymentIntentId}`);
        if (!merchantResponse.ok) {
            throw new Error(`获取商家信息失败: ${merchantResponse.status}`);
        }
        
        const merchantData = await merchantResponse.json();
        if (!merchantData.merchantPaypalEmail) {
            throw new Error('商家PayPal邮箱未设置，无法进行支付');
        }
        
        // 显示处理中UI
        showPayPalProcessingUI();
        
        // 创建PayPal订单
        const response = await fetch(`${API_BASE_URL}/payment/paypal/create-order`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                paymentIntentId: paymentIntentId
            })
        });
        
        if (!response.ok) {
            throw new Error(`创建订单失败: ${response.status}`);
        }
        
        const orderData = await response.json();
        
        if (orderData.success) {
            // 标记订单已创建
            paypalOrderCreated = true;
            
            // 保存PayPal订单ID到本地存储
            localStorage.setItem(`paypal_order_${paymentIntentId}`, orderData.data.id);
            
            console.log('PayPal订单创建成功:', orderData.data);
            return orderData.data.id;
        } else {
            throw new Error(orderData.message || '创建订单失败');
        }
    } catch (error) {
        console.error('创建PayPal订单错误:', error);
        showError('创建PayPal订单失败: ' + error.message);
        hidePayPalProcessingUI();
        throw error;
    }
}

/**
 * 显示信息提示
 * @param {string} message 信息消息
 */
function showInfo(message) {
    // 移除之前的消息
    const previousMessage = document.getElementById('info-message-container');
    if (previousMessage) {
        previousMessage.remove();
    }
    
    // 创建新的信息消息
    const infoDiv = document.createElement('div');
    infoDiv.id = 'info-message-container';
    infoDiv.className = 'info-message';
    infoDiv.textContent = message;
    
    // 添加到页面
    document.getElementById('message').appendChild(infoDiv);
    
    // 5秒后自动隐藏
    setTimeout(() => {
        infoDiv.style.opacity = '0';
        setTimeout(() => {
            if (infoDiv.parentNode) {
                infoDiv.parentNode.removeChild(infoDiv);
            }
        }, 500);
    }, 5000);
}

